<form method="post" action="{{ path('reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Voulez-vous vraiment annuler la reservation ?');">
    <div class="col s12 m6" id="deletebtn">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
    <button class="btn red darken-2" style="width:215px"><i class="material-icons left">clear</i>Annuler</button>
    </div>
</form>

