{{ form_start(form) }}
    <div class="container">
      <div class="row" id="formreservation">
          <div class="col s12 m6">
            <div class="row">
              <div class="col s12">
                <i class="material-icons prefix"style="color: #d0c07a;">restaurant</i>
                {{ form_widget(form.nombre_personnes) }}
                <label for="autocomplete-input">Nombre de Personnes</label>
              </div>
            </div>
          </div>
          <div class="col s12 ">
            <div class="row">
              <div class="col s12">
                <i class="material-icons prefix"style="color: #d0c07a;">access_time</i>
                <label for="autocomplete-input">Selectioner l'heure de reservation </label>
                {{ form_widget(form.heure_reservation)}}
                
              </div>
            </div>
          </div>
          <div class="col s12 ">
            <div class="row">
              <div class="col s12">
                  <i class="material-icons prefix"style="color: #d0c07a;">access_time</i>
                {{ form_label(form.date_de_reservation)}}
                {{ form_widget(form.date_de_reservation)}}
              </div>
            </div>
          </div>  
           <div class="col s12">
            <div class="row">
             <button class="btn waves-effect btn-small" style="background-color: rgba(0, 0, 0, 0.863) ; width: 300px; " type="submit" name="action">
              <i class="material-icons right">check</i> {{ button_label|default('Reserver') }}</button> 
            </div>
           </div>
           <div class="col s12 ">
            <div class="row">
        <div class="condition">
          <p>* Conditions :</p>
          <p>Tout retard de plus de 30 minutes effectura une annulation automatique par le restaurant.</p>
          <p>Merci de prendre contact avec le restaurant si un retard et à prévoir. </p>
        </div>
              </div>
    </div>
      </div>
    </div>
<script>

  $(document).ready(function(){
    $('.timepicker').timepicker();
    $('.datepicker').datepicker();
  });   
     
</script>

{{ form_end(form) }}
