{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
 <div class="row">
    <div class="col s12 m12 backgroundmenulist">
    </div>
</div>
<div class="container">
    <h1 class="nosmenu">Mes Menus</h1>
        {% for menu in menus %}
                <ul class="collapsible popout">
                <li>
                    <div class="collapsible-header" style="text-transform: uppercase;" id="listmenucarte"><i class="material-icons" style="color: #d0c07a;">room_service</i>"{{ menu.nomMenu }}"</div>
                    <div class="collapsible-body" id="detailmenu">
                        <div class="row">
                            <div class="col s12">
                                <p class="detailtitre">Entrées</p>
                                <p>{{ menu.entrer }}</p>
                               <span style="color:#d0c07a;">ou</span>
                                <p>{{ menu.entrer2 }}</p>
                            </div>
                            <div class="col s12"> 
                                <p class="detailtitre">Plats</p>
                                <p>{{ menu.plats }}</p>
                                 <span style="color:#d0c07a;">ou</span>
                                <p>{{ menu.plats2 }}</p>
                            </div>
                            <div class="col s12"> 
                                <p class="detailtitre">Desserts</p>
                                <p>{{ menu.dessert }}</p>
                                 <span style="color:#d0c07a;">ou</span>
                                <p>{{ menu.Dessert2 }}</p>
                            </div>
                           
                            <div class="col s12">  
                            <hr class="lignemenu">
                                <p class="detailtitre">Menu à {{ menu.prix }}€</p>
                            </div>
                            
                        </div>
                        
                    </div>
                     
                </li>
                </ul>
              <div class="row">
           <div class="col s12 m6"style="display: flex;justify-content: center;">
                {{ include('menu/_delete_form.html.twig') }}
                </div>
                <div class="col s12 m6">
                <a href="{{ path('menu_edit', {'id': menu.id}) }}"class="lienmodif">Modifier mon menu</a>
                  <a href="{{ path('menu_new', {'id': menu.restaurant.id}) }}" class="lienmodif">Ajouter un menu</a>
                </div>
                 </div>
        {% endfor %}
    </div>
    <div Class="backgroundmenuor">
        <img src="/assets/images/menu/pngwing.com (31).png"/>
    </div>
        <div class="retourprofile">
         
            <a href="{{path('user_edit', { 'id' : app.user.id})}}">Retour à mon profil</a>

        </div>
{% endblock %}

