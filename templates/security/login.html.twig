{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


<!----BACKGROUND-->
  <div class="row">
        <div class="col s4 m4 backgroundimg3">

        </div>
        <div class="col s4 m4  backgroundimg4">

        </div>
        <div class="col s4 m4 backgroundimg5">

        </div>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
  </div>
<!--FINBACKGROUND-->

  <!--Connexion-->
  <div class="titleinscription">
        <h4>Connexion</h4>
  </div>
  <form method="post">
<div class="connexion">
    <div class="container" id="connexion">
      <div class="row sty">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix" style="color: #d0c07a;">email</i>
                        <input id="email" type="email" class="validate value="{{ last_username }}" name="email" id="inputEmail" class="form-control"">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix" style="color: #d0c07a;">lock</i>
                        <input id="password" type="password" class="validate" name="password" id="inputPassword" autocomplete="current-password" required>
                        <label for="password">Password</label>
                            <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">
                    </div>
                </div>
                <button class="btn waves-effect btn-small" style="background-color: rgba(0, 0, 0, 0.863) ; width: 300px; "
                    type="submit" name="action">Connexion
                    <i class="material-icons right">check</i>
                </button>
                <p style="text-align: center;  font-family: 'Times New Roman', Times, serif;">Pas encore de compte ? <a href="{{path('app_register')}}" class="inscrivez">inscrivez-vous !</a> </p>
       
        </div>
    </div>
</div>
</form>
  <!-FINConnexion-->
</form>
{% endblock %}
  
  
    

  

