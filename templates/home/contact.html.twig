{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
  {{ form_start(form) }}           
 <div class="row">
      <div class="row">
        <div class="input-field col s12 m6">
          {{ form_row(form.nom, {"attr": {'class': ''}}) }}
        </div>
        <div class="input-field col s12 m6">
         {{ form_row(form.prenom, {"attr": {'class': ''}}) }}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6">
          {{ form_row(form.email, {"attr": {'class': ''}}) }}
       
        </div>
        <div class="input-field col s12 m6">
         {{ form_row(form.telephone, {"attr": {'class': ''}}) }}
          
        </div>
      </div>
      <div class="row">
      </div>
      <div class="row">
        <div class="input-field col s12 m6">
         {{ form_row(form.message, {'attr': {'class': 'materialize-textarea'}}) }}
         
        </div>
      </div>
  </div>
<button class="btn btn-primary">{{ button_label|default('Envoyer un mail') }}</button>
{{ form_end(form) }}
{% endblock %}