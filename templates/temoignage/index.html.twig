{% extends 'base.html.twig' %}

{% block title %}Temoignage index{% endblock %}

{% block body %}
    <h1>Temoignage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>date du commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for temoignage in temoignages %}
     
            <tr>
                <td>{{ temoignage.id }}</td>
                <td>{{ temoignage.commentaire }}</td>
                <td>{{ temoignage.note }}</td>
                <td>{{ temoignage.date|date("d M Y") }}</td>
                <td>
                    <a href="{{ path('temoignage_show', {'id': temoignage.id}) }}">show</a>
                    <a href="{{ path('temoignage_edit', {'id': temoignage.id}) }}">edit</a>
                        {{ include('temoignage/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

